{
  "name": "masq-client",
  "version": "1.1.0",
  "description": "Client library for Masq",
  "main": "index.js",
  "scripts": {
    "clean": "rm  dist/index.js ",
    "build": "npm run lint && babel ./src --experimental -d ./dist && browserify ./dist/index.js --standalone MasqClient > dist/MasqClient.js && npm run clean",
    "minify": "npm run build && uglifyjs dist/MasqClient.js -o dist/MasqClient.min.js --compress --mangle --",
    "dist": "npm run minify",
    "lint": "standard src/",
    "start": "npm run dist && http-server -p 9999 ."

  },
  "author": {
    "name": "Andrei Sambra",
    "email": "a.sambra@qwant.com"
  },
  "license": "MIT",
  "devDependencies": {
    "babel-cli": "^6.26.0",
    "babel-preset-env": "^1.6.1",
    "browserify": "^14.5.0",
    "http-server": "^0.10.0",
    "uglify-js": "^3.1.10"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/QwantResearch/masq-client.git"
  },
  "dependencies": {
    "cross-storage": "^1.0.0"
  },
  "standard": {
    "ignore": [
        "node_modules/**"
    ],
    "globals": [
        "describe",
        "context",
        "before",
        "beforeEach",
        "after",
        "afterEach",
        "it",
        "expect",
        "should",
        "afterAll",
        "beforeAll",
        "define"
    ]
  }
}
